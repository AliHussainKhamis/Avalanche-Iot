<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>G Hub - Your Devices</title>
  <link rel="stylesheet" href="/styles.css">
  <script type="module" src="https://unpkg.com/@google/model-viewer/dist/model-viewer.min.js"></script>
</head>
<body>

  <!-- Background 3D model -->
  <model-viewer 
    src="/assets/SpaceTravel.glb" 
    alt="3D Background" 
    auto-rotate 
    camera-controls 
    camera-orbit="0deg 90deg 0.4m"
    style="position: fixed; top: 0; left: 0; width: 100vw; height: 100vh; z-index: -1; background-color: black;">
  </model-viewer>

  <header class="nav-bar">
    <h1>Your Devices</h1>
    <div class="user-info">
      <% if (user && user.profilePic) { %>
        <img src="<%= user.profilePic %>" alt="Profile Picture">
        <p><%= user.name %></p>
      <% } %>
      <a href="/logout" class="logout-btn">Logout</a>
    </div>
  </header>

  <main>
    <div class="action-bar">
      <a href="/device/new" class="btn">Add Device</a>
    </div>

    <div class="device-list">
      <% allDevices.forEach(device => { %>  
        <div class="device-card">
          <h2><%= device.name %></h2>  
          <p><strong>Description:</strong> <%= device.description %></p>

          <div class="device-actions">
            <a href="/device/<%= device._id %>" class="btn small">Details</a>
            <a href="/device/<%= device._id %>/edit" class="btn small">Edit</a>
          </div>

          <a href="/device/<%= device._id %>/control" class="btn full control">Control</a>

          <form action="/device/<%= device._id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn full danger" onclick="return confirm('Are you sure you want to delete this device?')">Delete</button>
          </form>
        </div>
      <% }) %>
    </div>
  </main>

</body>
</html>
